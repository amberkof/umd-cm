<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<!--  Config taken from ks-rice-admin-context.xml from ks-rice.jar -->
	
	<!-- BEGIN: ks-rice-admin-context.xml -->
	<import resource="classpath:KsAdminModuleBeans.xml" />

	<bean id="ojbConfigurer" class="org.kuali.rice.core.ojb.JtaOjbConfigurer">
		<property name="transactionManager" ref="jtaTransactionManager" />
	</bean>
	
    <!-- JTA -->
    <tx:annotation-driven transaction-manager="transactionManager" />


	<!-- needed datasource for KS admin service data for rice admin screens -->
 
	<bean id="ksAdminDataSource" class="org.kuali.rice.core.database.XAPoolDataSource">
		<property name="transactionManager" ref="jtaTransactionManager" />
		<property name="driverClassName" value="${umd.cm.datasource.driver.name}" />
		<property name="url" value="${umd.cm.datasource.url}" />
		<property name="maxSize" value="${umd.cm.datasource.pool.maxSize}" />
		<property name="minSize" value="${umd.cm.datasource.pool.minSize}" />
		<property name="maxWait" value="${umd.cm.datasource.pool.maxWait}" />
		<property name="validationQuery" value="${umd.cm.datasource.pool.validationQuery}" />
		<property name="username" value="${umd.cm.datasource.username}" />
		<property name="password" value="${umd.cm.datasource.password}" />
	</bean>

	<bean id="ks.exp.messageService" class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition">
				<property name="jaxWsService" value="true" />
				<property name="service" ref="ks.messageService" />
				<property name="serviceInterface" value="org.kuali.student.common.messages.service.MessageService" />
				<property name="localServiceName" value="MessageService" />
				<property name="serviceNameSpaceURI" value="http://student.kuali.org/wsdl/messages" />
				<property name="busSecurity" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="ks.exp.subjectCodeService" class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="serviceDefinition">
			<bean class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition">
				<property name="jaxWsService" value="true" />
				<property name="service" ref="ks.subjectCodeService" />
				<property name="serviceInterface"
					value="org.kuali.student.core.subjectcode.service.SubjectCodeService" />
				<property name="localServiceName" value="SubjectCodeService" />
				<property name="serviceNameSpaceURI" value="http://student.kuali.org/wsdl/subjectCode" />
				<property name="busSecurity" value="false" />
			</bean>
		</property>
	</bean>
	
	<!--  END: ks-rice-admin-context.xml -->
	

	<!--  Following config taken from StudentStandaloneSpringBeans.xml in ks-rice.jar -->
	
	<!--  BEGIN: StudentStandaloneSpringBeans.xml config-->
	<bean id="ks.exp.kimPermissionService" class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="remotedServiceRegistry" ref="enServiceInvoker" />
		<property name="serviceDefinition">
			<bean parent="kimSoapService" p:service-ref="kimPermissionService"
				p:localServiceName="kimPermissionService">
				<property name="busSecurity" value="${umd.cm.bus.security}" />
				<property name="jaxWsService" value="true" />
			</bean>
		</property>
	</bean>

	<bean id="ks.exp.kimIdentityManagementService" class="org.kuali.rice.ksb.messaging.KSBExporter">
		<property name="remotedServiceRegistry" ref="enServiceInvoker" />
		<property name="serviceDefinition">
			<bean parent="kimSoapService" p:service-ref="kimIdentityManagementService"
				p:localServiceName="kimIdentityManagementServiceSOAP">
				<property name="busSecurity" value="${umd.cm.bus.security}" />
				<property name="jaxWsService" value="true" />
			</bean>
		</property>
	</bean>

	<bean id="studentRiceModule" class="org.kuali.rice.kns.service.impl.ModuleServiceBase">
		<property name="moduleConfiguration" ref="studentRiceModuleConfiguration" />
		<property name="kualiModuleService" ref="kualiModuleService" />
	</bean>

	<bean id="studentRiceModuleConfiguration" class="org.kuali.rice.kns.bo.ModuleConfiguration">
		<property name="namespaceCode" value="KS-SYS" />
		<property name="initializeDataDictionary" value="true" />
		<property name="dataDictionaryPackages">
			<list>
				<value>classpath:org/kuali/rice/student/bo/datadictionary/KualiStudentKimAttributes.xml</value>
				<value>classpath:edu/umd/ks/cm/bo/datadictionary/UmdKualiStudentKimAttributes.xml</value>
			</list>		
		</property>
		<property name="packagePrefixes">
			<list>
				<value>org.kuali.rice.student.</value>
			</list>
		</property>
	</bean>

	<!-- OrgAdmin Derived role (AdministrativeOfficer of this org) -->
	<bean id="ksOrgAdminRoleTypeService"
		class="org.kuali.student.lum.kim.role.type.OrgDerivedRoleTypeServiceImpl">
		<property name="includedOrgPersonRelationTypes">
			<list>
				<value>kuali.org.PersonRelation.Chair</value>
			</list>
		</property>
		<!--<property name="orgService" ref="orgClient"/>-->
	</bean>

	<!-- Org Derived role (anyone that's related to this org) -->
	<bean id="ksOrgCommitteeRoleTypeService"
		class="org.kuali.student.lum.kim.role.type.OrgDerivedRoleTypeServiceImpl">
		<property name="excludedOrgPersonRelationTypes">
			<list>
				<value>kuali.org.PersonRelation.Chair</value>
				<value>kuali.org.PersonRelation.CurriculumManager</value>
			</list>
		</property>
		<!--<property name="orgService" ref="orgClient"/>-->
	</bean>

	<bean id="ksOrgCurriculumManagerRoleTypeService"
		class="org.kuali.student.lum.kim.role.type.OrgDerivedRoleTypeServiceImpl">
		<property name="includedOrgPersonRelationTypes">
			<list>
				<value>kuali.org.PersonRelation.CurriculumManager</value>
			</list>
		</property>
	</bean>

    <!-- Action Request Derived role (type - Non Adhoc) (status - ACTIVE) -->
    <bean id="ksNonAdhocActionRequestDerivedRoleTypeServiceImpl" class="org.kuali.student.lum.kim.role.type.KSNonAdhocActionRequestDerivedRoleTypeServiceImpl"/>

    <!-- Action Request Derived role (type = Adhoc) (status - ACTIVE) -->
    <bean id="ksAdhocActionRequestDerivedRoleTypeServiceImpl" class="org.kuali.student.lum.kim.role.type.KSAdhocActionRequestDerivedRoleTypeServiceImpl"/>

    <!-- Action Request Derived role (type = Non Adhoc) (status - DONE) -->
    <bean id="ksNonAdhocDoneActionRequestDerivedRoleTypeServiceImpl" class="org.kuali.student.lum.kim.role.type.KSNonAdhocDoneActionRequestDerivedRoleTypeServiceImpl"/>

    <!-- Action Request Derived role (type = Adhoc) (status - DONE) -->
    <bean id="ksAdhocDoneActionRequestDerivedRoleTypeServiceImpl" class="org.kuali.student.lum.kim.role.type.KSAdhocDoneActionRequestDerivedRoleTypeServiceImpl"/>

    <!-- Route Log Derived role -->
    <bean id="ksRouteLogDerivedRoleTypeServiceImpl" class="org.kuali.student.lum.kim.role.type.KSRouteLogDerivedRoleTypeServiceImpl">
        <property name="checkFutureRequests" value="false" />
    </bean>    

    <bean id="ksCommentOnDocumentRoleTypeService" class="org.kuali.rice.kns.authorization.PermissionDerivedRoleTypeServiceImpl">
        <property name="permissionTemplateNamespace" value="KS-SYS" />
        <property name="permissionTemplateName" value="Comment on Document" />
    </bean>

    <bean id="ksEditDocumentRoleTypeService" class="org.kuali.rice.kns.authorization.PermissionDerivedRoleTypeServiceImpl">
        <property name="permissionTemplateNamespace" value="KS-SYS" />
        <property name="permissionTemplateName" value="Edit Document" />
    </bean>

    <!-- Organization Hierarchy Role Type -->
    <bean id="ksOrganizationHierarchyRoleTypeService" class="org.kuali.student.lum.kim.role.type.OrganizationHierarchyRoleTypeService"/>

	<!-- Affiliation Derived role (anyone that's either a Staff or Faculty affiliation) -->
	<bean id="ksAffiliationService"
		class="org.kuali.student.lum.kim.role.type.AffiliationDerivedRoleTypeServiceImpl">
		<property name="includedAffiliationTypes">
			<!-- See KimConstants.PersonAffiliationTypes -->
			<list>
				<value>STAFF</value>
				<value>FCLTY</value>
			</list>
		</property>
	</bean>
	
	<!-- Hierarchy Derived role -->
<!--
	<bean id="ksHierarchyDerivedRoleType" class="org.kuali.student.lum.kim.role.type.HierarchyNodeTestRoleTypeServiceBase" />
-->

    <!-- Use our own custom xml parser which also parses passwords -->
   	<bean id="enUserXmlService" class="org.kuali.rice.student.kew.xml.KSUserXmlServiceImpl" />

	<!-- END: StudentStandaloneSpringBeans.xml -->
</beans>